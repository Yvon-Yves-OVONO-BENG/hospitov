{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter un billet de session{% endtrans %}
        {% else %}
        {% trans %}Modification d'un billet de session{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}
    <!-- Row starts -->
        <div class="row gx-3">
            <div class="col-sm-12">
            <div class="card mb-3">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="card-title text-info">
                                {% if slug == 0 %}
                                    {% trans %}Ajouter un billet de session{% endtrans %}
                                    {% else %}
                                    {% trans %}Modification d'un billet de session{% endtrans %}
                                {% endif %}
                            </h5>
                        </div>
                        <div class="col-md-6" style="text-align: right !important;">
                            <a href="{{ path ('afficher_billet_de_session', {'a': 1 }) }}" class="btn btn-primary"><i class="fe fe-list me-2"></i>
                                {% trans %}Les billets de session{% endtrans %}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                {{ form_start(formBilletDeSession, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                    <div class="row" style="margin-top: 15px !important;">
                        
                        <div class="col-md-3 position-relative">
                            <label for="validationCustom04" class="form-label">{% trans %}Intitulé du billet de session{% endtrans %} <span class="text-danger">*</span></label>
                            {{ form_widget(formBilletDeSession.libelle, {'attr': {'id':'validationCustom04'}}) }}

                            <div class="invalid-feedback">
                                {% trans %}Veuillez saisir un billet de session !{% endtrans %}
                            </div>
                        </div>

                        <div class="col-md-3 position-relative">
                            <label for="validationCustom04" class="form-label">{% trans %}Prix{% endtrans %} <span class="text-danger">*</span></label>
                            {{ form_widget(formBilletDeSession.prixVente, {'attr': {'id':'validationCustom04'}}) }}

                            <div class="invalid-feedback">
                                {% trans %}Veuillez saisir le prix!{% endtrans %}
                            </div>
                        </div>
                        <div class="col-md-3 position-relative">
                            <label for="validationCustom04" class="form-label">{% trans %}Spécialité{% endtrans %} <span class="text-danger">*</span></label>
                            {{ form_widget(formBilletDeSession.specialite, {'attr': {'id':'validationCustom04'}}) }}

                            <div class="invalid-feedback">
                                {% trans %}Veuillez sélectionner une spécialité !{% endtrans %}
                            </div>
                        </div>
                        <input type="hidden" value="{{ csrfToken }}" name="csrfToken">
                        <div class="col-md-3 position-relative text-center" style="margin-top: 30px !important;">
                            <button type="submit" class="btn btn-outline-primary btn-md">
                                <i class="fe fe-save"></i> 
                                {% if slug == 0 %}
                                    {% trans %}Enregistrer{% endtrans %}
                                    {% else %}
                                    {% trans %}Enregistrer les modifications{% endtrans %}
                                {% endif %}
                            </button>
                        </div>
                        
                    </div>
                {{ form_end(formBilletDeSession)}}
                </div>
            </div>
            </div>
        </div>
        <!-- Row ends -->
        </div>
    </div>
{% endblock %}
