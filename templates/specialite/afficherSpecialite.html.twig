{% extends 'base.html.twig' %}

{% block title %}
   {% trans %}Liste des départements / spécialités{% endtrans %}
{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}

        td {
			font-size: 12px !important;
			text-align: center !important;
		}
	</style>
{% endblock %}

{% block body %}
		<!-- Row starts -->
		<div class="row gx-3">
			
			<div class="col-sm-12  mb-5">
				<div class="card">
					<div class="card-header d-flex align-items-center justify-content-between">
						
						<h5 class="card-title">
							<button type="button" class="btn btn-primary mt-1 mb-1 me-3">
								<span class="badge bg-white text-dark">{{ specialites|length|number_format }}</span>
								<span> {% trans %}départements/spécialités enregistré(s){% endtrans %}</span>
							</button>
							
						</h5>
					
						
						<a href="{{ path ('ajouter_specialite') }}" class="btn btn-primary ms-auto">
							{% trans %}Ajouter un département / une spécialité{% endtrans %}
						</a>
							
					</div>
					<div class="card-body">

						<!-- Table starts -->
						<div class="table-responsive">
							<table id="basicExample" class="table m-0 align-middle">
								<thead>
									<tr>
										<th>{% trans %}N°{% endtrans %}</th>
										<th>{% trans %}Département/Spécialité{% endtrans %}</th>
										<th>{% trans %}Chef de département{% endtrans %}</th>
										<th>{% trans %}Effectif{% endtrans %}</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tfoot>
									<tr>
										<th>{% trans %}N°{% endtrans %}</th>
										<th>{% trans %}Département/Spécialité{% endtrans %}</th>
										<th>{% trans %}Chef de département{% endtrans %}</th>
										<th>{% trans %}Effectif{% endtrans %}</th>
										<th>Actions</th>
									</tr>
								</tfoot>
								<tbody>
									{% set i = 1 %}
									{% for specialite in specialites %}
										<tr>
											<td>{{ i }}</td>
											<td>{{ specialite.specialite }}</td>
											<td>
												<img src="{{ specialite.chefDeDepartement.photo ? asset ('images/photoUsers/' ~ specialite.chefDeDepartement.photo ) : asset ('assets/images/administrateur.png')}}" class="img-shadow img-2x rounded-5 me-1"
												alt="{{ specialite.chefDeDepartement.nom }}">
											
												{{ specialite.chefDeDepartement.nom }}
											</td>
											<td>
											<div class="stacked-images">
												{% for user in specialite.users|slice(0,3) %}
													<img src="{{ user.photo ? asset ('images/photoUsers/' ~ user.photo ) : asset ('assets/images/administrateur.png')}}" alt="{{ user.nom }}">
												{% endfor %}

												<span class="plus bg-primary">+{{ specialite.users|length - specialite.users|slice(0,3)|length }}</span>
											</div>
											</td>
											<td>
												<div class="d-inline-flex gap-1">

													<a href="{{ path ('modifier_specialite', {'slug': specialite.slug })}}" class="btn btn-outline-success btn-sm rounded-5"
													data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="{% trans %}Modifier{% endtrans %} : {{ specialite.specialite }}">
														<i class="ri-edit-box-line"></i>
													</a>

													{% if specialite.users|length == 0 %}
														<a class="btn btn-outline-danger btn-sm rounded-5" href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="{% trans %}Supprimer{% endtrans %} : {{ specialite.specialite }}" 
															onclick="swal({
																'title': 'Attention', 
																'type': 'warning', 
																'text': 'Voulez-vous vraiment supprimer cette spécialité ?', 
																'showCancelButton': true, 
																'confirmButtonText': 'Oui', 
																'confirmButtonColor': '#f00', 
																'cancelButtonText': 'Non', 
																'cancelButtonColor': '#38cb89', 
																'confirmButtonPath': '{{ path ('supprimer_specialite', {'slug': specialite.slug })}} '});">
									
														<i class="ri-delete-bin-line"></i></a>
														{% else %}
														<a class="btn btn-outline-danger btn-sm rounded-5" href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="{% trans %}Supprimer{% endtrans %} : {{ specialite.specialite }}"
															onclick="swal({
																'title': 'Danger',
																'text': 'Suppression annulée. Cette spécialité est attribuée à au moins un utilisateur',
																'type': 'error',
																'showCancelButton': true,
																'showConfirmButton': false,
																'confirmButtonText': false,
																'cancelButtonText': 'OK',
																'cancelButtonColor': '#088318', 
															})">
															<i class="ri-delete-bin-line"></i>
														</a>
													{% endif %}	
												</div>
											</td>
										</tr>
										{% set i = i + 1 %}
									{% endfor %}
								</tbody>
							</table>
						</div>
						<!-- Table ends -->

					</div>
				</div>
			</div>

			{# Diagrammes #}
			<div class="col-sm-6">
				<div class="card mb-3">
					<div class="card-header">
						<h5 class="card-title">{% trans %}Départements{% endtrans %}</h5>
					</div>
					<div class="card-body">

						<div class="chart-height-lg">
							<div id="total-department" class="auto-align-graph"></div>
						</div>

					</div>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="card mb-3">
					<div class="card-header">
						<h5 class="card-title">{% trans %}Employés{% endtrans %}</h5>
					</div>
					<div class="card-body">

						<div class="chart-height-lg">
						<div id="employees" class="auto-align-graph"></div>
						</div>

					</div>
				</div>
			</div>
		</div>
		<!-- Row ends -->
	
	</div>
</div>
{% endblock %}