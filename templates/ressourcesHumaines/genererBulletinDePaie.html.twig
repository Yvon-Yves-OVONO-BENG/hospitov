{% extends 'base.html.twig' %}

{% block title %}{% trans %}Génération du bulletin de paie{% endtrans %}{% endblock %}

{% block body %}
  <!-- Row starts -->
                <div class="row gx-3">
                    <div class="col-sm-12">
                        <div class="card mb-3">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5 class="card-title text-info">
                                            {% trans %}Génération du bulletin de paie{% endtrans %}
                                        </h5>
                                    </div>
                                    <div class="col-md-6" style="text-align: right !important;">
                                        <a href="{{ path ('afficher_lot', {'a': 1 }) }}" class="btn btn-primary"><i class="fe fe-list me-2"></i>
                                            {% trans %}Afficher les lots{% endtrans %}
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                {{ form_start(formBulletinDePaie, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                                    <div class="row" style="margin-top: 15px !important;">
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Personnel{% endtrans %}</label>
                                            {{ form_widget(formBulletinDePaie.personnel, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir une référence !{% endtrans %}
                                            </div>
                                        </div>
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Le mois{% endtrans %}</label>
                                            {{ form_widget(formBulletinDePaie.mois, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir le mois!{% endtrans %}
                                            </div>
                                        </div>
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}L'année{% endtrans %}</label>
                                            {{ form_widget(formBulletinDePaie.annee, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir l'année !{% endtrans %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top: 15px !important;">
                                        <div class="col-md-12 position-relative text-center" style="margin-top: 30px !important;">
                                            <button type="submit" class="btn btn-outline-primary btn-md">
                                                <i class="fe fe-save"></i> 
                                                {% trans %}Générer{% endtrans %}
                                            </button>
                                        </div>
                                    </div>
                                {{ form_end(formBulletinDePaie)}}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Row ends -->
            </div>
        </div>
{% endblock %}
