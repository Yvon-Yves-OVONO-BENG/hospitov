{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter un type personnel{% endtrans %}
        {% else %}
        {% trans %}Modification d'un type personnel{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}
        <!-- Row starts -->
            <div class="row gx-3">
                <div class="col-sm-12 col-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="card-title text-info">
                                        {% if slug == 0 %}
                                            <i class="fa fa-stethoscope me-2"></i>
                                            {% trans %}Ajout d'un type personnel{% endtrans %}
                                            {% else %}
                                            <i class="fa fa-stethoscope  me-2"></i>
                                            {% trans %}Modification d'un type personnel{% endtrans %}
                                        {% endif %}
                                    </h5>
                                </div>
                                <div class="col-md-6" style="text-align: right !important;">
                                    <a href="{{ path ('afficher_typeUtilisateur', {'a': 1 }) }}" class="btn btn-primary"><i class="fe fe-list me-2"></i>
                                        {% trans %}Afficher les types personnel{% endtrans %}
                                    </a>
                                </div>
                            </div>
                            
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                {{ form_start(formTypeUtilisateur, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                                    <div class="row" style="margin-top: 15px !important;">
                                        
                                        <div class="col-md-2 position-relative">
                                        </div>
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom04" class="form-label">{% trans %}Type personnel{% endtrans %}</label>
                                            {{ form_widget(formTypeUtilisateur.typeUtilisateur, {'attr': {'id':'validationCustom04'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir le nom d'un type personnel !{% endtrans %}
                                            </div>
                                        </div>


                                        <div class="col-md-4 position-relative text-center" style="margin-top: 30px !important;">
                                            <button type="submit" class="btn btn-primary btn-md">
                                                <i class="fe fe-save me-2"></i> 
                                                {% trans %}Enregistrer{% endtrans %}
                                            </button>
                                        </div>
                                        <div class="col-md-2 position-relative">
                                        </div>
                                    </div>
                                        
                                {{ form_end(formTypeUtilisateur)}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        
    </div>
</div>
        <!-- Row ends -->
{% endblock %}
