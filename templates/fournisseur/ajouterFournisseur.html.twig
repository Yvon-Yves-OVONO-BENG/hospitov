{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter un fournisseur{% endtrans %}
        {% else %}
        {% trans %}Modification d'un fournisseur{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}
    <!-- Row starts -->
        <div class="row gx-3">
            <div class="col-sm-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="card-title text-info">
                                    {% if slug == 0 %}
                                        <i class="ri-add-line"></i>
                                        {% trans %}Ajout d'un fournisseur{% endtrans %}
                                        {% else %}
                                       
                                        <span class="badge bg-danger"><i class="ri-edit-box-line me-2"></i>{% trans %}Modification de : {% endtrans %} {{ fournisseur.fournisseur }}</span>
                                        
                                    {% endif %}
                                </h4>
                            </div>
                            <div class="col-md-6" style="text-align: right !important;">
                                <a href="{{ path ('afficher_fournisseur', {'a': 1 }) }}" class="btn btn-primary">
                                    <i class="ri-eye-line me-2"></i>
                                    {% trans %}Afficher les fournisseurs{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
				
                            <div class="card-body ">
                                {{ form_start(formFournisseur, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                                    <div class="row" style="margin-top: 15px !important;">
                                        
                                        <div class="col-md-3 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Fournisseur{% endtrans %}</label>
                                            {{ form_widget(formFournisseur.fournisseur, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir le nom du fournisseur !{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-3 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Adresse{% endtrans %}</label>
                                            {{ form_widget(formFournisseur.adresse, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir l'adresse du fournisseur !{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-3 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Contact{% endtrans %}</label>
                                            {{ form_widget(formFournisseur.contact, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir le contact du fournisseur{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-3 position-relative text-center" style="margin-top: 30px !important;">
                                            <button type="submit" class="btn btn-primary btn-md">
                                                <i class="ri-save-line me-2"></i> 
                                                {% if slug == 0 %}
                                                    {% trans %}Enregistrer{% endtrans %}
                                                    {% else %}
                                                    {% trans %}Enregistrer les modifications{% endtrans %}
                                                {% endif %}
                                            </button>
                                        </div>
                                        <div class="col-md-2 position-relative">
                                        </div>
                                    </div>
                                        
                                {{ form_end(formFournisseur)}}

                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
