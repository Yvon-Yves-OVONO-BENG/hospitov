{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter un modèle{% endtrans %}
        {% else %}
        {% trans %}Modification d'un modèle{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}
<!-- Row starts -->
        <div class="row gx-3">
            <div class="col-sm-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="card-title text-info">
                                    {% if slug == 0 %}
                                        {% trans %}Ajout d'un modèle{% endtrans %}
                                        {% else %}
                                        {% trans %}Modification du modèle: {% endtrans %} {{ modele.modele }}
                                    {% endif %}
                                </h5>
                            </div>
                            <div class="col-md-6" style="text-align: right !important;">
                                <a href="{{ path ('liste_modele', {'a': 1 }) }}" class="btn btn-primary">
                                    {% trans %}Afficher les modèles{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        {{ form_start(formModele, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}

                            <div class="row" id="modeleForm" style="margin-top: 15px !important;">
                                
                                <div class="col-md-4 position-relative">
                                    <label for="validationCustom01" class="form-label">{% trans %}Nom du modèle{% endtrans %}</label>
                                    {{ form_widget(formModele.modele, {'attr': {'id':'validationCustom02'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez saisir le nom du modèle !{% endtrans %}
                                    </div>
                                </div>
                                <div class="col-md-4 position-relative">
                                    <label for="validationCustom01" class="form-label">{% trans %}Marque{% endtrans %}</label>
                                    {{ form_widget(formModele.marque, {'attr': {'id':'validationCustom01'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez choisir la marque !{% endtrans %}
                                    </div>
                                </div>

                                <div class="col-md-4 position-relative text-center mt-4">
                                    <button type="submit" class="btn btn-outline-primary btn-md">
                                        <i class="fe fe-save"></i> 
                                        {% if slug == 0 %}
                                            {% trans %}Enregistrer{% endtrans %}
                                            {% else %}
                                            {% trans %}Enregistrer les modifications{% endtrans %}
                                        {% endif %}
                                    </button>
                                </div>
                                
                            </div>

                            {# FIN PARTIE EXAMEN #}
                        {{ form_end(formModele)}}
                    </div>
                </div>
            </div>
        </div>
        <!-- Row ends -->
    </div>
</div>
<script src="{{asset('js/choixTypeModele.js')}}"></script>
<script src="{{asset('js/ajoutModele.js')}}"></script>
{% endblock %}
