{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Enregistrement des paramètres vitaux de {% endtrans %} 
        {{ billetDeSession.patient.code }} - 
        {{ billetDeSession.patient.nom }}
        {% else %}
        {% trans %}Modification des paramètres de {% endtrans %} 
        {{ parametresVitaux.billetDeSession.patient.code }} - 
        {{ parametresVitaux.billetDeSession.patient.nom }}
    {% endif %}    
{% endblock %}

{% block body %}
    <!-- Row starts -->
        <div class="row gx-3">
            <div class="col-sm-12">
            <div class="card mb-3">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="card-title text-info">
                                {% if slug == 0 %}
                                    {% trans %}Enregistrement des paramètres vitaux de {% endtrans %} 
                                    {{ billetDeSession.patient.code }} - 
                                    {{ billetDeSession.patient.nom }}
                                    {% else %}
                                    {% trans %}Modification des paramètres de {% endtrans %} 
                                    {{ parametresVitaux.billetDeSession.patient.code }} - 
                                    {{ parametresVitaux.billetDeSession.patient.nom }}
                                {% endif %}
                            </h5>
                        </div>
                        <div class="col-md-6" style="text-align: right !important;">
                            <a href="{{ path ('afficher_parametres_vitaux', {'parametre': 'tousLesParametres', 'a': 1 }) }}" class="btn btn-primary"><i class="fe fe-list me-2"></i>
                                {% trans %}Les paramètres vitaux{% endtrans %}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                {{ form_start(formParametresVitaux, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                    <div class="row" style="margin-top: 15px !important;">
                        
                        <div class="col-md-3 position-relative">
                            <label for="validationCustom04" class="form-label">{% trans %}Poids{% endtrans %} <span class="text-danger">*</span></label>
                            {{ form_widget(formParametresVitaux.poids, {'attr': {'id':'validationCustom04'}}) }}

                            <div class="invalid-feedback">
                                {% trans %}Veuillez saisir le poids !{% endtrans %}
                            </div>
                        </div>

                        <div class="col-md-3 position-relative">
                            <label for="validationCustom04" class="form-label">{% trans %}Température{% endtrans %} <span class="text-danger">*</span></label>
                            {{ form_widget(formParametresVitaux.temperature, {'attr': {'id':'validationCustom04'}}) }}

                            <div class="invalid-feedback">
                                {% trans %}Veuillez saisir la température !{% endtrans %}
                            </div>
                        </div>
                        <div class="col-md-3 position-relative">
                            <label for="validationCustom04" class="form-label">{% trans %}Tension{% endtrans %} <span class="text-danger">*</span></label>
                            {{ form_widget(formParametresVitaux.tension, {'attr': {'id':'validationCustom04'}}) }}

                            <div class="invalid-feedback">
                                {% trans %}Veuillez saisir la tension !{% endtrans %}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label for="validationCustom04" class="form-label">{% trans %}Sera consulté par{% endtrans %}</label>
                            <select class="form-select" name="medecinId" id="validationCustom04" required>
                                <option selected disabled value="">--Sélectionner un médecin</option>
                                {% for medecin in medecins %}
                                    <option value="{{ medecin.id }}">{{ medecin.nom }}</option>
                                {% endfor %}
                            </select>
                            <div class="invalid-feedback">
                                {% trans %}Veuillez Sélectionner un médecin{% endtrans %}
                            </div>
                        </div>
                        <input type="hidden" value="{{ csrfToken }}" name="csrfToken">

                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4 position-relative text-center" style="margin-top: 30px !important;">
                            <button type="submit" class="btn btn-outline-primary btn-md">
                                <i class="fe fe-save"></i> 
                                {% if slug == 0 %}
                                    {% trans %}Enregistrer{% endtrans %}
                                    {% else %}
                                    {% trans %}Enregistrer les modifications{% endtrans %}
                                {% endif %}
                            </button>
                        </div>
                        <div class="col-md-4">
                        </div>
                    </div>
                {{ form_end(formParametresVitaux)}}
                </div>
            </div>
            </div>
        </div>
        <!-- Row ends -->
        </div>
    </div>
{% endblock %}
