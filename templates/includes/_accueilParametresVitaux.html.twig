            <div class="card mb-3">
                <div class="card-cover rounded-2" style="background-image: url('assets/images/products/3.jpg');">
                    <div class="p-5 text-white">
                    <h3 class="mb-3 fs-12">
                        {{ sessionsDuJourEnAttente|length|number_format }} {% trans %}Session(s) en attente{% endtrans %} 
                    </h3>
                    <a href="{{ path ('afficher_session', {'session': 'enAttente'}) }}" class="btn btn-sm btn-info">{% trans %}Afficher{% endtrans %}</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="card mb-3">
                <div class="card-cover rounded-2" style="background-image: url('assets/images/products/1.jpg');">
                    <div class="p-5 text-white">
                    <h3 class="mb-3">
                        {{ sessionsDuJourEnRecues|length|number_format }} {% trans %}Session(s) reçue(s){% endtrans %}
                    </h3>
                    <a href="{{ path ('afficher_session', {'session': 'recues'}) }}" class="btn btn-sm btn-success">{% trans %}Afficher{% endtrans %}</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
