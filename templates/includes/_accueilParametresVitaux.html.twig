    <div class="col-12">
        <div class="card mb-3">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5>{% trans %}Sessions du jour{% endtrans %} {{ "now"|date('d') }} {{ "now"|date('m')|mois_en_lettres }} {{ "now"|date('Y') }}</h5>
                <a href="javascript:void(0);" target="_blank" class="btn btn-outline-primary btn-pill">
                     <i class="ri-printer-fill me-2"></i>
                    {% trans %}Imprimer les sessions du jour{% endtrans %}
                </a>
            </div>
        </div>
