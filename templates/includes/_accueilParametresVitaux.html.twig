    <!--Row-->
    <div class="row gx-3">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title">{% trans %}Les sessions du jour{% endtrans %}</h5>
                    <button type="button" class="btn btn-primary mt-1 mb-1 me-3">
                        <span class="badge bg-white text-dark">{{ sessions | length|number_format }}</span>
                        <span>{% trans %}session(s) enregistrée(s){% endtrans %}</span>
                    </button>
                    <a href="{{ path ('afficher_session', {'session': 'toutesLesSessions'})}}" class="btn btn-primary mt-1 mb-1 me-3">
                        <span>{% trans %}Afficher toutes les sessions{% endtrans %}</span>
                    </a>
                </div>
                <div class="card-body">

                    <!-- Table starts -->
                    <div class="table-responsive">
                        {% include "includes/_tableSession.html.twig" %}
                    </div>
                </div>
            </div>
