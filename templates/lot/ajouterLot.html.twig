{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter un lot{% endtrans %}
        {% else %}
        {% trans %}Modification du lot : {% endtrans %} {{ lot.reference }} 
    {% endif %}    
{% endblock %}

{% block body %}
                <!-- Row starts -->
                <div class="row gx-3">
                    <div class="col-sm-12">
                        <div class="card mb-3">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5 class="card-title text-info">
                                            {% if slug == 0 %}
                                                <i class="fa fa-eercast me-2"></i>
                                                {% trans %}Ajout d'un lot{% endtrans %}
                                                {% else %}
                                                <i class="fa fa-eercast  me-2"></i>
                                                {% trans %}Modification du lot : {% endtrans %} {{ lot.reference }}
                                            {% endif %}
                                        </h5>
                                    </div>
                                    <div class="col-md-6" style="text-align: right !important;">
                                        <a href="{{ path ('afficher_lot', {'a': 1 }) }}" class="btn btn-primary"><i class="fe fe-list me-2"></i>
                                            {% trans %}Afficher les lots{% endtrans %}
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                {{ form_start(formLot, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                                    <div class="row" style="margin-top: 15px !important;">
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Référence{% endtrans %}</label>
                                            {{ form_widget(formLot.reference, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir une référence !{% endtrans %}
                                            </div>
                                        </div>
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Prix d'achat{% endtrans %}</label>
                                            {{ form_widget(formLot.prixAchat, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir le prix d'achat !{% endtrans %}
                                            </div>
                                        </div>
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Coefficient{% endtrans %}</label>
                                            {{ form_widget(formLot.coef, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir le coefficient !{% endtrans %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top: 15px !important;">
                                            
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Quantité{% endtrans %}</label>
                                            {{ form_widget(formLot.quantite, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir une quantité !{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Date péremption{% endtrans %}</label>
                                            {{ form_widget(formLot.datePeremptionAt, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir une date de péremption !{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Type produit{% endtrans %}</label>
                                            {{ form_widget(formLot.typeProduit, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez sélectionner le type de produit !{% endtrans %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top: 15px !important;">
                                        <div class="col-md-12 position-relative text-center" style="margin-top: 30px !important;">
                                            <button type="submit" class="btn btn-outline-primary btn-md">
                                                <i class="fe fe-save"></i> 
                                                {% if slug == 0 %}
                                                    {% trans %}Enregistrer{% endtrans %}
                                                    {% else %}
                                                    {% trans %}Enregistrer les modifications{% endtrans %}
                                                {% endif %}
                                            </button>
                                        </div>
                                    </div>
                                {{ form_end(formLot)}}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Row ends -->
            </div>
        </div>
{% endblock %}
