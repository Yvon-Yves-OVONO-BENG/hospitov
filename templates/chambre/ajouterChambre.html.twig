{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter une chambre{% endtrans %}
        {% else %}
        {% trans %}Modification d'une chambre{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}
        <!-- Row starts -->
        <div class="row gx-3">
            <div class="col-sm-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="card-title text-info">
                                    {% if slug == 0 %}
                                        {% trans %}Ajout d'une chambre{% endtrans %}
                                        {% else %}
                                        {% trans %}Modification de la chambre: {% endtrans %} {{ chambre.chambre }}
                                    {% endif %}
                                </h5>
                            </div>
                            <div class="col-md-6" style="text-align: right !important;">
                                <a href="{{ path ('liste_chambre', {'a': 1 }) }}" class="btn btn-primary">
                                    {% trans %}Afficher les chambres{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                         {{ form_start(formChambre, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                            <div class="row" style="margin-top: 15px !important;">
                                
                                <div class="col-md-3 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Intitulé de la chambre{% endtrans %}</label>
                                    {{ form_widget(formChambre.chambre, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez saisir l'intitulé de la chambre !{% endtrans %}
                                    </div>
                                </div>

                                <div class="col-md-3 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Type{% endtrans %}</label>
                                    {{ form_widget(formChambre.typeChambre, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez sélectionner le type{% endtrans %}
                                    </div>
                                </div>

                                <div class="col-md-3 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Batiment{% endtrans %}</label>
                                    {{ form_widget(formChambre.batiment, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez sélectionner le bâtiment{% endtrans %}
                                    </div>
                                </div>

                                <div class="col-md-3 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Niveau{% endtrans %}</label>
                                    {{ form_widget(formChambre.niveau, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez sélectionner le niveau{% endtrans %}
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-top: 15px !important;">
                                <div class="col-md-4 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Département{% endtrans %}</label>
                                    {{ form_widget(formChambre.specialite, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez sélectionner le département{% endtrans %}
                                    </div>
                                </div>

                                <div class="col-md-4 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Nombre de lit{% endtrans %}</label>
                                    {{ form_row(formChambre.nombreLit, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez saisir le nombre de lit{% endtrans %}
                                    </div>
                                </div>

                                <div class="col-md-4 position-relative text-center" style="margin-top: 30px !important;">
                                    <button type="submit" class="btn btn-outline-primary btn-md">
                                        <i class="fe fe-save"></i> 
                                        {% if slug == 0 %}
                                            {% trans %}Enregistrer{% endtrans %}
                                            {% else %}
                                            {% trans %}Enregistrer les modifications{% endtrans %}
                                        {% endif %}
                                    </button>
                                </div>
                                
                            </div>
                        {{ form_end(formChambre)}}
                    </div>
                </div>
            </div>
        </div>
        <!-- Row ends -->
    </div>
</div>
{% endblock %}
