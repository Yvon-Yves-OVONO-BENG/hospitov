{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter une hospitalisation{% endtrans %}
        {% else %}
        {% trans %}Modification d'une hospitalisation{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}
        <!-- Row starts -->
        <div class="row gx-3">
            <div class="col-sm-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="card-title text-info">
                                    {% if slug == 0 %}
                                        {% trans %}Enregistrement d'une hospitalisation{% endtrans %}
                                        {% else %}
                                        {% trans %}Modification d'une hospitalisation{% endtrans %}
                                    {% endif %}
                                </h5>
							</div>
							<div class="col-md-6" style="text-align: right !important;">
								<div class="btn-list">
									<a href="{{ path ('afficher_hospitalisation', {'a': 1 }) }}" class="btn btn-outline-primary"><i class="fe fe-list me-2"></i>
										{% trans %}Afficher les hospitalisations{% endtrans %}</a>
								</div>
							</div>
						</div>
					</div>

                    <div class="card-body ">
                        {{ form_start(formHospitalisation, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                            <div class="row" style="margin-top: 15px !important;">
                                <div class="col-md-4 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Patient{% endtrans %}</label>
                                    {{ form_widget(formHospitalisation.patient, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-tooltip">
                                        {% trans %}Veuillez sélectionner un patient !{% endtrans %}
                                    </div>
                                </div>
                                <div class="col-md-4 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Lit{% endtrans %}</label>
                                    {{ form_widget(formHospitalisation.lit, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-tooltip">
                                        {% trans %}Veuillez sélectionner un lit !{% endtrans %}
                                    </div>
                                </div>
                                <div class="col-md-4 position-relative">
                                    <label for="validationCustom04" class="form-label">{% trans %}Statut de l'hospitalisation{% endtrans %}</label>
                                    {{ form_widget(formHospitalisation.statut, {'attr': {'id':'validationCustom04'}}) }}

                                    <div class="invalid-tooltip">
                                        {% trans %}Veuillez sélectionner un statut !{% endtrans %}
                                    </div>
                                </div>
                                <input type="hidden" value="{{ csrfToken }}" name="csrfToken">
                            </div>
                            <div class="row" style="margin-top: 15px !important;">
                                <div class="col-md-4 position-relative">
                                </div>
                                <div class="col-md-4 position-relative text-center" style="margin-top: 30px !important;">
                                    <button type="submit" class="btn btn-outline-primary btn-md">
                                        <i class="fe fe-save"></i> 
                                        {% if slug == 0 %}
                                            {% trans %}Enregistrer{% endtrans %}
                                            {% else %}
                                            {% trans %}Enregistrer les modifications{% endtrans %}
                                        {% endif %}
                                    </button>
                                </div>
                                <div class="col-md-4 position-relative">
                                </div>
                            </div>
                                
                        {{ form_end(formHospitalisation)}}

                    </div>
                        
                </div>
            </div>
        </div>
    </div>
{% endblock %}
