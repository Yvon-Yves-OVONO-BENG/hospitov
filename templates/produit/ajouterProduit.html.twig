{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter un produit{% endtrans %}
        {% else %}
        {% trans %}Modification d'un produit{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}
                <!-- Row starts -->
        <div class="row gx-3">
            <div class="col-sm-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="card-title text-info">
                                    {% if slug == 0 %}
                                        <i class="fa fa-eercast me-2"></i>
                                        {% trans %}Ajout d'un produit{% endtrans %}
                                        {% else %}
                                        <i class="fa fa-eercast  me-2"></i>
                                        {% trans %}Modification du produit : {% endtrans %} {{ produit.libelle }}
                                    {% endif %}
                                </h5>
                            </div>
                            <div class="col-md-6" style="text-align: right !important;">
                                <a href="{{ path ('afficher_produits', {'a': 1 }) }}" class="btn btn-primary"><i class="fe fe-list me-2"></i>
                                    {% trans %}Afficher les produits{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                            
                        <div class="card-body ">
                            {{ form_start(formProduit, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                                
                                {# DEBUT PRODUIT CLASSIC #}
                                <div class="row" id ="produitForm" style="margin-top: 15px !important;">
                                    
                                    <div class="col-md-4 position-relative">
                                        <label for="validationCustom01" class="form-label">{% trans %}Lot du produit{% endtrans %}</label>
                                        {{ form_widget(formProduit.lot, {'attr': {'id':'validationCustom01'}}) }}

                                        <div class="invalid-feedback">
                                            {% trans %}Veuillez sélectionner le lot !{% endtrans %}
                                        </div>
                                    </div>

                                    <div class="col-md-4 position-relative">
                                        <label for="validationCustom01" class="form-label">{% trans %}Désignation{% endtrans %}</label>
                                        {{ form_widget(formProduit.libelle, {'attr': {'id':'validationCustom01'}}) }}

                                        <div class="invalid-feedback">
                                            {% trans %}Veuillez saisir la désignation !{% endtrans %}
                                        </div>
                                    </div>

                                    <div class="col-md-4 position-relative">
                                        <label for="validationCustom01" class="form-label">{% trans %}Quantité seuil{% endtrans %}</label>
                                        {{ form_widget(formProduit.quantiteSeuil, {'attr': {'id':'validationCustom01'}}) }}

                                        <div class="invalid-feedback">
                                            {% trans %}Veuillez saisir la quentité seuil !{% endtrans %}
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 15px !important;">
                                    <div class="col-md-4 position-relative">
                                        <div class="form-check form-switch form-check-reverse">
                                            <input class="form-check-input" type="checkbox" name="carnet" id="flexSwitchCheckReverse">
                                            <label class="form-check-label" for="flexSwitchCheckReverse">{% trans %}C'est un carnet d'hôpital ?{% endtrans %}</label>
                                        </div>
                                    </div>

                                    <div class="col-md-4 position-relative text-center">
                                        {# <label for="validationCustom01" class="form-label">{% trans %}Photo du produit{% endtrans %}</label> #}
                                        {{ form_widget(formProduit.photoFile, {'attr': {'id':'validationCustom01'}}) }}

                                        <div class="invalid-feedback">
                                            {% trans %}Veuillez choisir la photo du produit !{% endtrans %}
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4 position-relative text-center" style="margin-top: 30px !important;">
                                        <button type="submit" class="btn btn-outline-primary btn-md">
                                            <i class="fe fe-save"></i> 
                                            {% if slug == 0 %}
                                                {% trans %}Enregistrer{% endtrans %}
                                                {% else %}
                                                {% trans %}Enregistrer les modifications{% endtrans %}
                                            {% endif %}
                                        </button>
                                    </div>
                                </div>
                            {{ form_end(formProduit)}}

                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{asset('js/choixTypeProduit.js')}}"></script>
<script src="{{asset('js/ajoutKit.js')}}"></script>
    
{% endblock %}
