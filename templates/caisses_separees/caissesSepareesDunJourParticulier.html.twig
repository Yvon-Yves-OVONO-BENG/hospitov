{% extends 'base.html.twig' %}

{% block title %}Caisses Separées d'un jour particulier{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		.infoTable {
			text-align: center !important;
			vertical-align: middle !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}

        td {
			font-size: 12px !important;
			text-align: center !important;
		}
	</style>
{% endblock %}

{% block body %}
			<div class="row gx-3">
				<div class="col-sm-12 mb-2">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">{% trans %}Veuillez Saisir la date dont vous voulez afficher les recettes{% endtrans %}</h3>
						</div>
						<div class="card-body">
							<form method="post" action="{{ path ('caisses_separees_d_un_jour_particulier') }}" class="row g-3 needs-validation" novalidate>
								<div class="row">
									<div class="col-md-4">
									</div>
									<div class="col-md-4 text-center">
										<input type="date" name="dateDuJour" class="form-control" id="validationCustom01" required>
										<div class="invalid-feedback">
											{% trans %}Veuillez saisir le date du jour donné{% endtrans %}
										</div>
									</div>
									<div class="col-md-4">
										<button class="btn btn-outline-primary" type="submit" name="afficher"><i class="ri-eye-line me-2"></i>{% trans %}Afficher{% endtrans %}</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			{# FIN FORMULAIRE SAISI DATE DU JOUR  #}

			{% if afficher == true %}
				{% include "includes/_caissesSeparees.html.twig" %}
			{% endif %}
			
		</div>
	</div>
</div>
{% endblock %}
