{% extends 'base.html.twig' %}

{% block title %}
    {% if slug == 0 %}
        {% trans %}Ajouter un gain{% endtrans %}
        {% else %}
        {% trans %}Modification d'un gain{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}

        <!-- Row starts -->
        <div class="row gx-3">
            <div class="col-sm-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="card-title text-info">
                                    {% if slug == 0 %}
                                        <i class="fa fa-eercast me-2"></i>
                                        {% trans %}Ajout d'un gain{% endtrans %}
                                        {% else %}
                                        <i class="fa fa-eercast  me-2"></i>
                                        {% trans %}Modification du gain : {% endtrans %} {{ gain.gain }}
                                    {% endif %}
                                </h5>
                            </div>
                            <div class="col-md-6" style="text-align: right !important;">
                                <a href="{{ path ('afficher_gain', {'a': 1 }) }}" class="btn btn-primary"><i class="fe fe-list me-2"></i>
                                    {% trans %}Afficher les gains{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        {{ form_start(formGain, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}

                            <div class="row" id="gainForm" style="margin-top: 15px !important;">
                                
                                <div class="col-md-4 position-relative">
                                    <label for="validationCustom01" class="form-label">{% trans %}Intitulé du gain{% endtrans %}</label>
                                    {{ form_widget(formGain.gain, {'attr': {'id':'validationCustom02'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez saisir l'intitulé du gain !{% endtrans %}
                                    </div>
                                </div>
                                <div class="col-md-4 position-relative text-center">
                                    <label for="validationCustom01" class="form-label">{% trans %}Pourcentage du gain{% endtrans %}</label>
                                    {{ form_widget(formGain.pourcentage, {'attr': {'id':'validationCustom01'}}) }}

                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez saisir le pourcentage du gain !{% endtrans %}
                                    </div>
                                </div>

                                <input type="hidden" value="{{ csrfToken }}" name="csrfToken">

                                <div class="col-md-4 position-relative text-center mt-4">
                                   <button type="submit" class="btn btn-outline-primary btn-md">
                                        <i class="fe fe-save"></i> 
                                        {% if slug == 0 %}
                                            {% trans %}Enregistrer{% endtrans %}
                                            {% else %}
                                            {% trans %}Enregistrer les modifications{% endtrans %}
                                        {% endif %}
                                    </button>
                                </div>
                                
                            </div>

                            {# FIN PARTIE EXAMEN #}
                        {{ form_end(formGain)}}
                    </div>
                </div>
            </div>
        </div>
        <!-- Row ends -->
    </div>
</div>
{% endblock %}
{% block javascripts %}

<script src="{{asset('js/choixTypeGain.js')}}"></script>
<script src="{{asset('js/ajoutGain.js')}}"></script>
    
{% endblock %}
